#!/usr/bin/env ruby

require 'reposit'
require 'optparse'
require 'pry'

setup = false
organization = nil

OptionParser.new do |opts|
  opts.banner = "Usage: reposit <repository_name> [options]"

  opts.on("-s", "--setup", "Reset your GitHub credentials") do |s|
    setup = true
  end

  opts.on("-o", "--organzation", "Create (private) repository on an organization") do |o|
    organization = o
  end
end.parse!

if setup
  path = File.expand_path('~') + '/.reposit'
  `rm #{path} > /dev/null 2>&1`
  Reposit::CredentialsSetter.run
else
  if !ARGV[0]
    puts `reposit --help`
  elsif !Reposit::SetupChecker.check
    Reposit::CredentialsSetter.run
    puts "Organization: #{organization}"
    Reposit::RepositoryMaker.run(ARGV[0], organization)
  else
    Reposit::RepositoryMaker.run(ARGV[0], organization)
  end
end